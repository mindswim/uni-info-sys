# API Configuration
NEXT_PUBLIC_API_URL=http://localhost
NEXT_PUBLIC_API_BASE_URL=http://localhost/api/v1

# Development Mode Flags
# Set to 'true' to bypass authentication requirements (useful for frontend-only development)
NEXT_PUBLIC_DEV_BYPASS_AUTH=false

# Set to 'true' to enable detailed API request/response logging
NEXT_PUBLIC_API_LOGGING=true

# Authentication (optional - disable auth wrapper entirely)
NEXT_PUBLIC_USE_AUTH=true
